<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:textColorPrimary">#ffffff</item>

        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">@color/White</item>
        <item name="android:activatedBackgroundIndicator">@color/colorPrimary200</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>


    </style>

    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/White</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="toolbar">
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorControlNormal">#000000</item>
    </style>

    <style name="LightText">
        <item name="android:textColor">@color/White</item>

    </style>

    <style name="DarkRipple">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>

    </style>
    <style name="til_style">
        <item name="android:textColor">#70000000</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>

    <style name="ProgressBarStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorBlue</item>
        <item name="colorControlActivated">@color/colorBlue</item>
    </style>

    <style name="RippleStyle">
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>
    <style name="ctl_title_collapsed">
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyRaisedButton" parent="Widget.AppCompat.Button">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/White</item>
        <item name="android:textColorTertiary">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="ctl_title_expanded">
        <item name="android:textColor">#00ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TilAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">#000000</item>
    </style>

</resources>
