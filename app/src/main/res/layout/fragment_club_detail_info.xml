<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/material_view_pager_placeholder" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="@dimen/cardMarginHorizontal"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                app:cardElevation="4dp">

                <FrameLayout
                    android:id="@+id/fl_event_detail_club"
                    style="@style/RippleStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="2dp"
                        android:paddingLeft="70dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:text="InformaciÃ³n general"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp" />

                        <com.ms.square.android.expandabletextview.ExpandableTextView xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/expand_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            expandableTextView:animDuration="200"
                            expandableTextView:maxCollapsedLines="5">

                            <TextView
                                android:id="@id/expandable_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/lorem"
                                android:textColor="#666666"
                                android:textSize="16sp" />

                            <ImageButton
                                android:id="@id/expand_collapse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|bottom"
                                android:background="@android:color/transparent"
                                android:padding="16dp" />
                        </com.ms.square.android.expandabletextview.ExpandableTextView>

                    </LinearLayout>

                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="VER"
                        android:textColor="@color/colorPrimary" />-->

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:background="@color/colorDivider" />

                    <View
                        android:id="@+id/v_gradient"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/white_gradient" />

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_info_black_24dp"
                        android:tint="@color/colorPrimary" />
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="@dimen/cardMarginHorizontal"
                android:layout_marginTop="@dimen/top_card_margin"
                android:background="@android:color/white"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        android:tint="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingLeft="70dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:text="Horario"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_club_detail_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="15dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:background="@color/colorDivider" />


                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="@dimen/cardMarginHorizontal"
                android:layout_marginTop="@dimen/top_card_margin"
                android:background="@android:color/white"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_euro_symbol_black_24px"
                        android:tint="@color/colorPrimary" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:background="@color/colorDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingLeft="70dp"
                        android:paddingRight="15dp"
                        android:paddingTop="15dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:text="Precio entrada"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_club_detail_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="14dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:text="Precio copa"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_club_detail_price_drink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="14dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:text="Precio botella"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_club_detail_price_vip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp" />
                    </LinearLayout>
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="@dimen/cardMarginHorizontal"
                android:layout_marginTop="@dimen/top_card_margin"
                android:background="@android:color/white"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_hanger"
                        android:tint="@color/colorPrimary" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:background="@color/colorDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingLeft="70dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:text="Ropero"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_club_detail_ropero"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="15dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp" />
                    </LinearLayout>
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="@dimen/cardMarginHorizontal"
                android:layout_marginTop="@dimen/top_card_margin"
                android:background="@android:color/white"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:padding="0dp"
                        android:src="@drawable/ic_seal"
                        android:tint="@color/colorPrimary" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="bottom"
                        android:background="@color/colorDivider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingLeft="70dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginBottom="4dp"
                            android:gravity="center_vertical"
                            android:text="Sello"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_club_detail_seal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:paddingRight="15dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp" />
                    </LinearLayout>
                </FrameLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="@dimen/cardMarginHorizontal"
                android:layout_marginTop="@dimen/top_card_margin"
                android:background="@android:color/white"
                app:cardElevation="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                    <ImageView
                        android:id="@+id/iv_club_map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#88000000" />

                    <TextView
                        android:id="@+id/tv_club_detail_map_direction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#ffffff" />

                </FrameLayout>

            </android.support.v7.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp" />
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <View
        android:id="@+id/v_club_detail_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#aa000000"/>

<ProgressBar
    android:id="@+id/pb_club_detail"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="center"/>

</android.support.design.widget.CoordinatorLayout>